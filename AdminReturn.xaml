<UserControl x:Class="LibraryManagementSystem.AdminReturn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagementSystem"
             mc:Ignorable="d" 
             d:DesignHeight="362" d:DesignWidth="655">

    <Grid>
        <!-- Определение строк -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Пробел -->
                <ColumnDefinition Width="0"/>
                <!-- Поиск -->
                <ColumnDefinition Width="250"/>
                <!-- Пустое пространство -->
                <ColumnDefinition Width="550"/>
                <!-- Заголовок -->
            </Grid.ColumnDefinitions>

            <!-- Поле поиска -->
            <Border Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="5"
                    Width="250"
                    Height="35"
                    Grid.Column="2">
                <Grid>
                    <TextBox x:Name="txtSearch"
                             Width="230"
                             Height="25"
                             VerticalAlignment="Center"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             FontSize="14"
                             Padding="5,0,5,0"
                             Text="Search..."
                             GotFocus="TxtSearch_GotFocus"
                             LostFocus="TxtSearch_LostFocus"
                             TextChanged="txtSearch_TextChanged"/>
                </Grid>
            </Border>

            <!-- Заголовок -->
            <Label Content="Return Section"
                   Foreground="White"
                   FontFamily="NORTHEN"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Grid.Column="4"/>
        </Grid>

        <!-- Таблица возвращённых книг -->
        <DataGrid Grid.Row="1" IsReadOnly="True" Height="300" Width="820" Margin="10,15,10,10"
                  x:Name="dgReturn" AutoGenerateColumns="False"
                  Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Book Id" Binding="{Binding BookId}"/>
                <DataGridTextColumn Header="Book Name" Binding="{Binding BookName}"/>
                <DataGridTextColumn Header="Date Returned" Binding="{Binding DateReturned}"/>
                <DataGridTextColumn Header="User Id" Binding="{Binding UserId}"/>
                <DataGridTextColumn Header="User Name" Binding="{Binding UserName}"/>
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BtnAccept" Content=" Accept " Click="BtnAccept_Click"
                                    Background="Green" Foreground="White" Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
